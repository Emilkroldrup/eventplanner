<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Event Planner</title>
  <link rel="stylesheet" href="/css/event.css">
</head>
<body>
<section class="events-section">
  <h2>Popular Events</h2>
  <div class="filter-buttons">
    <button>All</button>
    <button>Today</button>
    <button>Tomorrow</button>
    <button>This Weekend</button>
    <button>Free</button>
  </div>
  <div class="events-container">
    <% if (events && events.length > 0) { %>
      <% events.forEach(event => { %>
        <div class="event-card">
          <img
                  src="/images/<%= event.id %>.png" onerror="this.onerror=null; this.src='/images/defaultEvent.png';" id="event-image"
                  alt="<%= event.title || 'Event' %>"
          />
          <div class="event-details">
            <span class="event-category"><%= event.eventType || 'Uncategorized' %></span>
            <h3><%= event.title %></h3>
            <p><%= event.date %></p>
            <p><%= event.location || 'Location not specified' %></p>
            <a href="<%= event.link %>">LÃ¦s mere</a>
          </div>
        </div>
      <% }); %>
    <% } else { %>
      <p>Ingen events fundet.</p>
    <% } %>
  </div>

  <button class="see-more">See More</button>
</section>
</body>
</html>
